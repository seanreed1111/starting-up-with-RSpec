%h1 Show Project Page
%h2
  = @project.name
  = @project.description
%p
= link_to "Edit Project", edit_project_path(@project)
=link_to "Delete Project", project_path(@project), method: :delete, data:{confirm: "Are you sure you want to delete this project?"} 

%header
  %h2 Tickets
  %ul.actions
    %li= link_to "New Ticket", new_project_ticket_path(@project)

%ul#tickets
  -@project.tickets.each do |ticket|
    %li
      \# #{ticket.id} -
      \#{link_to ticket.name, [@project, ticket]}

